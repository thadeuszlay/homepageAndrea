	}
}

function movePaddle(event){
	
	var ypos = event.clientY;
	if((ypos>45) && (ypos<270)){
		enemy.style.top = parseInt(ypos-40)+"px";
	}
}

function reverseBall(event) {
	if (event.keyCode===65){
		dvx=-1*dvx;
	}		
}

$(document).ready(main);


var ball;
var dx;
var dy;
var scor = 0;
var dod;
var pscor = 0;
var escor = 0;
var point;
var los;
var reversal = 0;




function gameLose()
{
if (escor >= 5){
goal.style.visibility = "hidden"
lose.style.visibility = "visible"
alert("Schade. Du hast " +pscor+ " zu " +escor+ " verloren.")
history.go(-1)
}
else
return
}

function gameWin()
{
if (pscor >= 5){
goal.style.visibility = "hidden"
win.style.visibility = "visible"
alert("Juhu! Du hast " +pscor+ " zu " +escor+ " gewonnen.")
history.go(-1)
}
else
return
}

function reverseIt()
{
if (reversal <= 9)
{
if (window.event.keyCode == 118){
dy = dy * -1
reversal = reversal + 1
score.reverse.value = reversal
}
if (window.event.keyCode == 104){
dx = dx * -1
reversal = reversal + 1
score.reverse.value = reversal
}
}
